{
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@@/*": [
        "./*"
      ],
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "node"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "src/test/**",
    ".history/**"
  ],
}